<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>


    <!--小视频点赞-->
    <declare-styleable name="SmallVideoLikeView">
        <attr name="defaultColor" format="color" />
        <attr name="checkedColor" format="color" />
        <attr name="ringColors" format="color" />
        <attr name="cirRadius" format="dimension" />
        <attr name="cycleTime" format="integer" />
        <attr name="unSelectCycleTime" format="integer" />
        <attr name="defaultLikeIconRes" format="reference" />
        <attr name="checkedLikeIconRes" format="reference" />
        <attr name="lrGroupCRatio" format="float" />
        <attr name="lrGroupBRatio" format="float" />
        <attr name="bGroupACRatio" format="float" />
        <attr name="tGroupBRatio" format="float" />
        <attr name="innerShapeScale" format="integer" />
        <attr name="dotSizeScale" format="integer" />
        <attr name="allowRandomDotColor" format="boolean" />
    </declare-styleable>

    <!--小视频进度条-->
    <declare-styleable name="SmallVideoProgressView">
        <!--进度条初始颜色-->
        <attr name="progressColors" format="string" />
        <!--进度条最小宽度即初始宽度-->
        <attr name="minProgressWidth" format="dimension" />
        <!--view最小宽度-->
        <attr name="minWidth" format="dimension" />
        <!--view最小高度-->
        <attr name="minHeight" format="dimension" />
    </declare-styleable>

</resources>
